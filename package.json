    "eslint-plugin-simple-import-sort": "^12.1.1",
    "prettier": "^3.6.2",
    "turbo": "^2.5.6",
    "typescript": "5.9.2"
  },
  "dependencies": {
    "lucide-react": "^0.544.0",
    "next": "^15.5.3",
